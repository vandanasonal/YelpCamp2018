<% include ../partials/header %>
<div class="container">
     
			<h1 style="text-align:center"> Create a New Campground</h1>
           <div style="width:45%; margin: 25px auto;">
	           <form action= "/campground" method="POST" enctype="multipart/form-data">
	             <div class="form-group">
				   <input class="form-control" type= "text" name="name" placeholder ="Camp name" required>
				 </div >
				 <div class="form-group">
				   <input class="form-control" type= "number" name="price" placeholder ="Price" min="0.01" step="0.01" requires>
				 </div >
				 <div class="form-group">
				    
				    <input class="form-control" type="text" name="location" id="location" placeholder="Camp Location" required>
				 </div>
				 <div class="form-group">
				 	<label for="image">Image</label>
				   <input class="form-control" type= "file" id="image"  name="image" placeholder ="Image url" accept="image/*" required>
				 </div>
				 <div class="form-group"> 
				   <input class="form-control" type="text" name="description" placeholder ="Description" required >
				 </div>
				 <div class="form-group">  
				   <button class="btn btn-lg btn-block submit">Submit</button>
				 </div>  
				</form>

			    <a href= "/campground"> Go Back</a>
	 		</div>
  </div>
<% include ../partials/footer %>
