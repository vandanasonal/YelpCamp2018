<% include ./partials/header %>

<div>
    <h1 style="text-align: center">Login</h1>
    <div style="width: 45%; margin: 25px auto;">
        <form action="/login" method="post">
            <div class="form-group">
                <input class="form-control" type="text" name="username" placeholder="username">
            </div>
            <div class="form-group">
                <input class="form-control" type="password" name="password" placeholder="password">
            </div>
            <div class="form-group">
                <button class="btn btn-lg btn-block btn-login">Login</button>
            </div>
             <span>Forgot your password? <a href="/forgot">Reset password</a></span>
              <hr>
             <span>New to YelpCamp? <a href="/register">Sign up now!</a></span>
        </form>
        <a class="back" href="/campground">Go Back</a>
        
    </div>
</div>
<% include ./partials/footer %>